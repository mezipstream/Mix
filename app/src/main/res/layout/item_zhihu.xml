<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/zhihu_item_ll_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/zhihu_item_img"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/lks_zhihu"/>

        <TextView
            android:id="@+id/zhihu_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/zhihu_item_img"
            android:layout_toStartOf="@id/zhihu_item_img"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="#de000000"
            android:textSize="18sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd9d9d9"/>

</LinearLayout>